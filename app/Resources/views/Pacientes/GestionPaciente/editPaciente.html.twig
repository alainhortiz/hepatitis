                }

                var mat_datos = {

                    idPaciente: '{{ paciente.getId() }}',
                    fechaDiagnostico: $("#editFechaDiagnostico").val(),
                    etiologia: $("#editEtiologia").val(),
                    tipoHepatitis: $("#editTipoHepatitis").val(),
